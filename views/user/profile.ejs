<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>User Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>
<body>
<header>
    <!-- Header content here -->
</header>

<section class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-3">
                <img src="user_photo.jpg" class="card-img-top" alt="User Photo">
                <div class="card-body">
                    <button type="button" class="btn btn-primary">Update Photo</button>
                    <button type="button" class="btn btn-danger">Delete Photo</button>
                </div>
            </div>

            <button type="button" class="btn btn-primary">Update Profile</button>
        </div>
        <div class="col-md-8">
            <div class="container">
                <div id="userDataContainer">
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <h2 class="mb-3">Purchase History</h2>
                        <ul id="purchaseHistory" class="list-group">
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<footer>
</footer>

<script>
    async function getUserData(){
        try {
            const response = await axios.get(`http://localhost:3000/api/profile`)
            const userData = response.data.user

            // Populate user data
            const userDataContainer = document.getElementById('userDataContainer')
            userDataContainer.innerHTML = `
                <div class="row mb-3">
                    <div class="col-md-6">
                        <h5>Name:</h5>
                        <p>${userData.name}</p>
                    </div>
                    <div class="col-md-6">
                        <h5>Surname:</h5>
                        <p>${userData.surname}</p>
                    </div>
                    <div class="col-md-6">
                        <h5>Address:</h5>
                        <p>${userData.address}</p>
                    </div>
                    <div class="col-md-6">
                        <h5>Phone:</h5>
                        <p>${userData.phone}</p>
                    </div>
                </div>
            `

            const purchaseHistory = userData.historyId
            console.log(purchaseHistory)
            const purchaseHistoryContainer = document.getElementById('purchaseHistory')
            purchaseHistoryContainer.innerHTML = ''
            purchaseHistory.forEach(item => {
                const product = item.productId
                console.log(product)
                const li = document.createElement('li')
                li.classList.add('list-group-item', 'd-flex', 'justify-content-between', 'align-items-center')
                const title = item.productId && item.productId.title ? item.productId.title : "Unknown Product"
                li.innerHTML = `
                    ${title}
                    <span class="badge bg-primary rounded-pill">Quantity: ${item.quantity}</span>
                    <span class="badge bg-secondary rounded-pill">Date: ${item.createdAt}</span>
                `
                purchaseHistoryContainer.appendChild(li)
            })
        } catch (err) {
            console.log(err)
        }
    }

    document.addEventListener('DOMContentLoaded', () => {
        getUserData()
    })
</script>
</body>
</html>
